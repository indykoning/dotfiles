#####################
# ALIASES #
######################

#---------------------
# SERVER MONITOR #
#---------------------
alias sm='php ~/websites/server-monitor/artisan'
alias smlist="sm server:list"
alias smssh="sm server:ssh"

#---------------------
# SYSTEM #
#---------------------
alias lock='pmset displaysleepnow'

#---------------------
# BASH PROFILE #
#---------------------
alias phpini="vim /usr/local/etc/valet-php/7.2/php.ini"

#---------------------
# FOLDERS & PROJECTS #
#---------------------
alias projects='cd ~/websites && clear'

#---------------------
# MAGENTO #
#---------------------
alias cssgrid='msetup && cd vendor/justbetter/magento2mix && sh mix.sh -i ; cd ../../../ && sh mix.sh'

#---------------------
# Sublime #
#---------------------
alias sublime="screen -md sh ~/Library/Application\ Support/Sublime\ Text\ 3/launch-osx.sh"
alias subl="sublime"

plugins+=(jira)

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
export PATH="/usr/local/sbin:$PATH"
PROJECT_PATHS=(~/websites)
